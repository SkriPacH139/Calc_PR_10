<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Стиль для базовых кнопок (цифры, запятая и т.п.) -->
    <Style x:Key="BaseButtonStyle" TargetType="Button">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Background" Value="#7DFCF7"/>
        <Setter Property="Foreground" Value="Black"/>
    </Style>

    <!-- Стиль для операторов (например, +, -, = и остальные не цифры) -->
    <Style x:Key="OperatorButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
        <Setter Property="Background" Value="#07A29C"/>
        <Setter Property="Foreground" Value="Black"/>
    </Style>

    <!-- Стиль для текстового поля дисплея -->
    <Style x:Key="DisplayTextBoxStyle" TargetType="TextBox">
        <Setter Property="FontSize" Value="36"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="IsReadOnly" Value="True"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="TextAlignment" Value="Right"/>
    </Style>
</ResourceDictionary>